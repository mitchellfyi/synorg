#!/usr/bin/env bash
# Run all linters

set -e

echo "Running RuboCop..."
bin/rubocop

echo "Running ERB Lint..."
bundle exec erblint --lint-all

echo "Running ESLint..."
yarn lint:js

echo "Running Prettier check..."
yarn format:check

echo "Running TypeScript type check..."
yarn typecheck

echo "All linters passed!"
