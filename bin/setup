#!/usr/bin/env ruby
# frozen_string_literal: true
require "fileutils"

APP_ROOT = File.expand_path("..", __dir__)

def system!(*args)
  system(*args, exception: true)
end

FileUtils.chdir APP_ROOT do
  # This script is a way to set up or update your development environment automatically.
  # This script is idempotent, so that you can run it at any time and get an expectable outcome.
  # Add necessary setup steps to this file.

  puts "== Installing dependencies =="
  system("bundle check") || system!("bundle install")

  # Clean up old gem versions to avoid unresolved spec warnings
  # This is safe to run multiple times and only removes unused versions
  # Clean up common gems that may have multiple versions installed
  # Note: gem cleanup may fail if gem is not installed, which is fine
  puts "\n== Cleaning up old gem versions =="
  %w[stringio].each do |gem_name|
    system("gem cleanup #{gem_name} 2>/dev/null") || true
  end

  # Install JavaScript dependencies
  # Use yarn if yarn.lock exists, otherwise npm
  # Ensure optional dependencies are installed (required for @parcel/watcher)
  #
  # NOTE: NODE_OPTIONS='--no-deprecation' suppresses deprecation warnings from yarn's
  # dependencies (not our code). This is a temporary workaround until yarn's dependencies
  # are updated. The warnings don't affect functionality.
  if File.exist?("yarn.lock")
    system!("NODE_OPTIONS='--no-deprecation' yarn install")
  else
    system!("npm install")
  end

  # puts "\n== Copying sample files =="
  # unless File.exist?("config/database.yml")
  #   FileUtils.cp "config/database.yml.sample", "config/database.yml"
  # end

  puts "\n== Preparing database =="
  system! "bin/rails db:prepare"
  system! "bin/rails db:reset" if ARGV.include?("--reset")
  
  # Load Solid Queue schema if tables don't exist
  # In development, Solid Queue uses the main database
  puts "\n== Setting up Solid Queue =="
  system!("bin/rails runner \"unless ActiveRecord::Base.connection.table_exists?('solid_queue_jobs'); load(File.join(Rails.root, 'db/queue_schema.rb')); end\"")

  puts "\n== Removing old logs and tempfiles =="
  system! "bin/rails log:clear tmp:clear"

  puts "\n== Installing Git hooks =="
  system! "bundle exec lefthook install"

  # Run CI checks to ensure dev environment is passing
  # Skip with --skip-ci flag for faster setup
  unless ARGV.include?("--skip-ci")
    puts "\n== Running CI checks to verify environment =="
    
    puts "\n  → JavaScript/TypeScript linting..."
    system!("yarn lint:js")
    system!("yarn format:check")
    system!("yarn typecheck")
    
    puts "\n  → Building assets..."
    system!("yarn build")
    system!("yarn build:css")
    
    puts "\n  → Ruby linting..."
    system!("bin/rubocop -f github")
    system!("bundle exec erb_lint --lint-all --autocorrect")
    
    puts "\n  → Security scans..."
    system!("bin/brakeman --no-pager")
    system!("bin/bundler-audit")
    
    puts "\n✓ All CI checks passed! Dev environment is ready."
  else
    puts "\n⚠ Skipping CI checks (use without --skip-ci to verify environment)"
  end

  unless ARGV.include?("--skip-server")
    puts "\n== Starting development server =="
    STDOUT.flush # flush the output before exec(2) so that it displays
    exec "bin/dev"
  end
end
