<li id="<%= dom_id(project) %>" class="hover:bg-gray-50 transition-colors">
  <%= link_to project_path(project), class: "block" do %>
    <div class="px-4 py-5 sm:px-6">
      <div class="flex items-center justify-between">
        <div class="flex-1 min-w-0">
          <div class="flex items-center">
            <h3 class="text-lg font-medium text-gray-900 truncate">
              <%= project.name || project.slug %>
            </h3>
            <span class="ml-3 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= state_badge_class(project.state) %>">
              <%= project.state.titleize %>
            </span>
          </div>
          <div class="mt-2 flex items-center text-sm text-gray-500">
            <span class="truncate">Slug: <%= project.slug %></span>
            <% if project.repo_full_name.present? %>
              <span class="mx-2">â€¢</span>
              <span class="truncate">Repo: <%= project.repo_full_name %></span>
            <% end %>
          </div>
        </div>
        <div class="ml-4 flex-shrink-0 flex items-center space-x-6 text-sm">
          <% open_count = project.work_items.where(status: %w[pending in_progress]).count %>
          <% completed_count = project.work_items.where(status: "completed").count %>
          <div class="text-center">
            <div class="text-2xl font-semibold text-gray-900">
              <%= open_count %>
            </div>
            <div class="text-xs text-gray-500">Open Tasks</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-semibold text-gray-900">
              <%= completed_count %>
            </div>
            <div class="text-xs text-gray-500">Completed</div>
          </div>
          <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
          </svg>
        </div>
      </div>
    </div>
  <% end %>
</li>

