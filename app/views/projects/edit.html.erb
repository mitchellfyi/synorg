<% content_for :title, "Edit Project" %>

<div class="min-h-screen bg-gray-50">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="mb-8">
      <%= link_to @project, class: "text-sm text-gray-500 hover:text-gray-700 mb-2 inline-block" do %>
        ‚Üê Back to Project
      <% end %>
      <h1 class="text-3xl font-bold text-gray-900">Edit Project</h1>
      <p class="mt-2 text-sm text-gray-700">Update the details for <%= @project.name || @project.slug %></p>
    </div>

    <div class="bg-white shadow sm:rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <%= form_with(model: @project) do |form| %>
          <%= render "form", form: form %>

          <div class="mt-6 flex items-center justify-end gap-x-3">
            <%= link_to "Cancel", @project, class: "text-sm font-semibold leading-6 text-gray-900" %>
            <%= form.submit "Update Project",
                class: "inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
