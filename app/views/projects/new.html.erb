<% content_for :title, "New Project" %>

<div class="min-h-screen bg-gray-50">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="mb-8">
      <%= link_to projects_path, class: "text-sm text-gray-500 hover:text-gray-700 mb-2 inline-block" do %>
        ‚Üê Back to Projects
      <% end %>
      <h1 class="text-3xl font-bold text-gray-900">Create New Project</h1>
      <p class="mt-2 text-sm text-gray-700">Enter the details for your new project</p>
    </div>

    <div class="bg-white shadow sm:rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <%= form_with(model: @project, local: true) do |form| %>
          <% if @project.errors.any? %>
            <div class="rounded-md bg-red-50 p-4 mb-6">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-red-800">
                    There <%= @project.errors.count == 1 ? 'was' : 'were' %> <%= pluralize(@project.errors.count, "error") %> with your submission:
                  </h3>
                  <div class="mt-2 text-sm text-red-700">
                    <ul class="list-disc pl-5 space-y-1">
                      <% @project.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          <% end %>

          <div class="space-y-6">
            <div>
              <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
              <%= form.text_field :name, 
                  class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm #{'border-red-300' if @project.errors[:name].any?}",
                  placeholder: "My Awesome Project" %>
              <% if @project.errors[:name].any? %>
                <p class="mt-2 text-sm text-red-600"><%= @project.errors[:name].first %></p>
              <% end %>
              <p class="mt-2 text-sm text-gray-500">A human-readable name for your project (optional)</p>
            </div>

            <div>
              <%= form.label :slug, class: "block text-sm font-medium text-gray-700" %>
              <%= form.text_field :slug, 
                  required: true,
                  class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm #{'border-red-300' if @project.errors[:slug].any?}",
                  placeholder: "my-awesome-project" %>
              <% if @project.errors[:slug].any? %>
                <p class="mt-2 text-sm text-red-600"><%= @project.errors[:slug].first %></p>
              <% end %>
              <p class="mt-2 text-sm text-gray-500">A unique identifier for your project (lowercase, hyphens allowed)</p>
            </div>

            <div>
              <%= form.label :brief, "Project Brief", class: "block text-sm font-medium text-gray-700" %>
              <%= form.text_area :brief, 
                  rows: 6,
                  class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
                  placeholder: "Describe what this project is about, its goals, and any important context..." %>
              <p class="mt-2 text-sm text-gray-500">Describe the purpose and goals of this project</p>
            </div>

            <div>
              <%= form.label :repo_full_name, "Repository Name", class: "block text-sm font-medium text-gray-700" %>
              <%= form.text_field :repo_full_name, 
                  class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
                  placeholder: "owner/repository" %>
              <p class="mt-2 text-sm text-gray-500">The GitHub repository for this project (e.g., "octocat/hello-world")</p>
            </div>

            <div>
              <%= form.label :github_pat_secret_name, "GitHub PAT Secret Name", class: "block text-sm font-medium text-gray-700" %>
              <%= form.text_field :github_pat_secret_name, 
                  class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
                  placeholder: "GITHUB_PAT" %>
              <p class="mt-2 text-sm text-gray-500">The name of the secret containing the GitHub Personal Access Token</p>
            </div>
          </div>

          <div class="mt-6 flex items-center justify-end gap-x-3">
            <%= link_to "Cancel", projects_path, class: "text-sm font-semibold leading-6 text-gray-900" %>
            <%= form.submit "Create Project", 
                class: "inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
