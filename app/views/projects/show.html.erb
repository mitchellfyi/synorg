<% content_for :title, @project.name || @project.slug %>

<%= turbo_stream_from "project_#{@project.id}" %>
<%= turbo_stream_from "project_#{@project.id}_runs" %>
<%= turbo_stream_from "project_#{@project.id}_work_items" %>
<%= turbo_stream_from "project_#{@project.id}_activities" %>

<div class="min-h-screen bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header -->
    <%= turbo_frame_tag "project_header_#{@project.id}" do %>
      <div class="mb-8">
        <div class="flex items-center justify-between">
          <div class="flex-1 min-w-0">
            <%= link_to projects_path, class: "text-sm text-gray-500 hover:text-gray-700 mb-2 inline-block" do %>
              ← Back to Projects
            <% end %>
            <div class="flex items-center">
              <h1 class="text-3xl font-bold text-gray-900">
                <%= @project.name || @project.slug %>
              </h1>
              <span class="ml-3 inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= state_badge_class(@project.state) %>">
                <%= @project.state.titleize %>
              </span>
            </div>
            <p class="mt-1 text-sm text-gray-500">
              <%= @project.slug %>
              <% if @project.repo_full_name.present? %>
                • <%= @project.repo_full_name %>
              <% end %>
            </p>
          </div>
          <div>
            <%= link_to "Edit", edit_project_path(@project), class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
            <%= link_to "View Runs", project_runs_path(@project), class: "ml-3 inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
            <% unless @project.orchestrator_running? %>
              <%= button_to "Run Orchestrator", trigger_orchestrator_project_path(@project), method: :post, class: "ml-3 inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500", form: { data: { turbo: "false" } } %>
            <% else %>
              <span class="ml-3 inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-400 bg-gray-100 cursor-not-allowed">
                Orchestrator Running
              </span>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>

    <div class="grid grid-cols-1 gap-6 lg:grid-cols-3">
      <!-- Main Content -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Project Brief -->
        <%= turbo_frame_tag "project_brief_#{@project.id}" do %>
          <div class="bg-white shadow overflow-hidden sm:rounded-lg">
            <div class="px-4 py-5 sm:px-6">
              <h2 class="text-lg font-medium text-gray-900">Project Brief</h2>
            </div>
            <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
              <% if @project.brief.present? %>
                <div class="prose prose-sm max-w-none">
                  <%= simple_format(@project.brief) %>
                </div>
              <% else %>
                <p class="text-gray-500 italic">No brief provided</p>
              <% end %>
            </div>
          </div>
        <% end %>

        <!-- Event Timeline -->
        <%= turbo_frame_tag "recent_activity_#{@project.id}" do %>
          <div class="bg-white shadow overflow-hidden sm:rounded-lg">
            <div class="px-4 py-5 sm:px-6">
              <h2 class="text-lg font-medium text-gray-900">Recent Activity</h2>
            </div>
            <div class="border-t border-gray-200">
              <% if @recent_runs.any? %>
                <div class="flow-root px-4 py-5 sm:px-6">
                  <ul id="recent_runs_<%= @project.id %>" role="list" class="-mb-8">
                    <%= render partial: "runs/run", collection: @recent_runs, locals: { recent_runs: @recent_runs } %>
                  </ul>
                </div>
              <% else %>
                <div class="px-4 py-5 sm:px-6 text-center text-gray-500">
                  <p>No activity yet</p>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>

        <!-- Full Activity Feed -->
        <%= turbo_frame_tag "activity_feed_#{@project.id}" do %>
          <div class="bg-white shadow overflow-hidden sm:rounded-lg">
            <div class="px-4 py-5 sm:px-6">
              <h2 class="text-lg font-medium text-gray-900">Activity Feed</h2>
              <p class="mt-1 text-sm text-gray-500">Complete observability of all project activity</p>
            </div>
            <div class="border-t border-gray-200">
              <% if @activities.any? %>
                <ul id="activities_<%= @project.id %>" role="list" class="divide-y divide-gray-200">
                  <%= render partial: "activities/activity", collection: @activities %>
                </ul>
              <% else %>
                <div class="px-4 py-5 sm:px-6 text-center text-gray-500">
                  <p>No activities yet</p>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Sidebar -->
      <div class="lg:col-span-1 space-y-6">
        <!-- Quick Stats -->
        <%= turbo_frame_tag "project_stats_#{@project.id}" do %>
          <div class="bg-white shadow overflow-hidden sm:rounded-lg">
            <div class="px-4 py-5 sm:px-6">
              <h2 class="text-lg font-medium text-gray-900">Quick Stats</h2>
            </div>
            <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
              <dl class="space-y-4">
                <div>
                  <dt class="text-sm font-medium text-gray-500">Open Work Items</dt>
                  <dd class="mt-1 text-2xl font-semibold text-gray-900">
                    <%= @open_work_items.count %>
                  </dd>
                </div>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Total Runs</dt>
                  <dd class="mt-1 text-2xl font-semibold text-gray-900">
                    <%= @total_runs_count %>
                  </dd>
                </div>
              </dl>
            </div>
          </div>
        <% end %>

        <!-- Next Steps / Open Work Items -->
        <%= turbo_frame_tag "open_work_items_#{@project.id}" do %>
          <div class="bg-white shadow overflow-hidden sm:rounded-lg">
            <div class="px-4 py-5 sm:px-6">
              <h2 class="text-lg font-medium text-gray-900">Next Steps</h2>
            </div>
            <div class="border-t border-gray-200">
              <% if @open_work_items.any? %>
                <ul id="work_items_<%= @project.id %>" role="list" class="divide-y divide-gray-200">
                  <%= render partial: "work_items/work_item", collection: @open_work_items.limit(10) %>
                </ul>
              <% else %>
                <div class="px-4 py-5 sm:px-6 text-center text-gray-500">
                  <p class="text-sm">No pending work items</p>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>

        <!-- Recent Work Items (including completed) -->
        <%= turbo_frame_tag "recent_work_items_#{@project.id}" do %>
          <div class="bg-white shadow overflow-hidden sm:rounded-lg mt-6">
            <div class="px-4 py-5 sm:px-6">
              <h2 class="text-lg font-medium text-gray-900">Recent Work Items</h2>
            </div>
            <div class="border-t border-gray-200">
              <% if @recent_work_items.any? %>
                <ul id="recent_work_items_<%= @project.id %>" role="list" class="divide-y divide-gray-200">
                  <%= render partial: "work_items/work_item", collection: @recent_work_items %>
                </ul>
              <% else %>
                <div class="px-4 py-5 sm:px-6 text-center text-gray-500">
                  <p class="text-sm">No work items yet</p>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
