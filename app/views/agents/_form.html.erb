<div class="space-y-6">
  <% if form.object.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">There were errors with your submission</h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% form.object.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div>
    <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :name,
        class: "mt-1 block w-full px-3 py-2 rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
        placeholder: "Agent Name" %>
  </div>

  <div>
    <%= form.label :key, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :key,
        class: "mt-1 block w-full px-3 py-2 rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm font-mono",
        placeholder: "agent-key",
        disabled: true %>
    <p class="mt-2 text-sm text-gray-500">Agent key cannot be changed after creation</p>
  </div>

  <div>
    <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :description,
        rows: 3,
        class: "mt-1 block w-full px-3 py-2 rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
        placeholder: "Brief description of what this agent does" %>
  </div>

  <div>
    <%= form.label :prompt, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :prompt,
        rows: 10,
        class: "mt-1 block w-full px-3 py-2 rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm font-mono text-xs",
        placeholder: "Agent prompt/instructions..." %>
    <p class="mt-2 text-sm text-gray-500">Instructions for the agent when executing work items</p>
  </div>

  <div>
    <%= form.label :max_concurrency, class: "block text-sm font-medium text-gray-700" %>
    <%= form.number_field :max_concurrency,
        min: 1,
        class: "mt-1 block w-full px-3 py-2 rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    <p class="mt-2 text-sm text-gray-500">Maximum number of concurrent work items this agent can process</p>
  </div>

  <div class="flex items-center">
    <%= form.check_box :enabled, class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" %>
    <%= form.label :enabled, "Enabled", class: "ml-2 block text-sm text-gray-900" %>
    <p class="ml-4 text-sm text-gray-500">Disable to prevent this agent from processing work items</p>
  </div>
</div>
